{
  "name": "portless-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.10",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bunx turbo build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "bunx turbo lint",
    "lint:fix": "bunx turbo lint:fix",
    "prepare": "husky",
    "test": "bunx turbo test",
    "test:coverage": "bunx turbo test:coverage",
    "test:e2e": "bunx turbo test:e2e",
    "test:watch": "bunx turbo test:watch",
    "typecheck": "bunx turbo typecheck"
  },
  "dependencies": {
    "portless": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.10",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
